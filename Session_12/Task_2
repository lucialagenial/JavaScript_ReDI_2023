<head>

</head>
<body>
  <input id="color" />
  <button onclick="changeColor()" >Change Color </button>

  <script>
    /*/Task 2 
    */

    function changeColor(){
      let inputColor = document.getElementById("color").value;
      document.body.style.backgroundColor = inputColor 
    }

    </script>
</body>