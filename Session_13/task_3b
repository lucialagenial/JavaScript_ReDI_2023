</script>
</body>

<!DOCTYPE html>
<html>
<head>

</head>
<body>
<button id="myButton">Get a new element!</button>

  
  <script>
    let numElements = 0;
    let i = 0; 
    for (i = 0; i < numElements; i++) {
      let myDiv= document.createElement("div");
      myDiv.id = "Element"+i;
      myDiv.textContent = "Element " + i; 
      document.body.appendChild(myDiv);
     }
    let bottom = document.getElementById("myButton");
    bottom.onclick = function(){
      let myDiv= document.createElement("div");
      myDiv.id = "Element"+i;
      myDiv.textContent = "Element " + i; 
      i++;
      document.body.appendChild(myDiv);
  
    }

  </script>
</body>


</script>
</body>