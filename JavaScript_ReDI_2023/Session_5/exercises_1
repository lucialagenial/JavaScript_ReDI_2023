    <script>
        // Task 1
        function sayName(name){
            document.body.textContent= "My name is " + name;
        }
        sayName("Lucía")
        // Task 2 
        function min(parameter1, parameter2){
            if (parameter1 > parameter2){
                return parameter2;
            } 
            // with return you don't need the else
            return parameter1;  
        }
        min(1, 2);    // should return 1
        min(100, 99); // should return 99
        min(-10, 0); 
        
        // Task 3 
        function introduceMe(name, age,language){
            document.body.textContent = "Hello, I'm " + name + ", I'm " + age + "years old. I speak " + language + "."
        }
        introduceMe("Lucía", 31, "Spanish")

        // Task 4 
        // Exercise 1 
        function square(a) {
            return a * a;
        }

        let result1 = square(2);
        console.log("Exersice 1: The square of your number is: " + result1)

        // Exercise 2 
        function sum(a, b) {
            return a+b;
        }

        let result2 = sum(2, 3);
        console.log("Exercise 2: The sum of both your paramethers is:", result2);

        // Exercise 3 

        /**
        Write a function that given the input values on the left gives the output on the right:
        *
        
        * 1, 2 => 2
        * 4, 5 => 5
        * 99, 5 => 99 
        * 100, 100 => 100 
        *
        */
        function weird(a,b){
            if (b > a){
                return b; 
            }
            else{
                return a; 
            }
        }
        console.log("These are the results of the 'weird function'.")
        console.log("a) 1,2: " + weird(1,2))
        console.log("b) 4,5: " + weird(4,5))
        console.log("c) 99,5: " + weird(99,5))
        console.log("d) 100,100 :" + weird(100,100))

        // Exercise 5: (Exercise 4 is repeated)
        function difference(a,b){
            return a - b;
        }
        let result5 = difference(8,4)
        console.log("Exercise 5: The difference of 8 and4 is: ", result5)

    </script>
